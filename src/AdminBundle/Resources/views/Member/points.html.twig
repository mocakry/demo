{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}
    会员管理 积分详情
{% endblock %}

{% block css %}
    <style>
        .console-index {
            padding: 0;
            border: 0;
        }
        .gradeA td {
            min-width: 130px;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="ibox float-e-margins">
        <div class="ibox-content" >
            <div class="table-responsive">
                <div class="current-location">
                    当前位置：<a href="javascript:;">积分详情</a>
                </div>

                <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                    <tr>
                        <th>序号</th>
                        <th>积分额度</th>
                        <th>类型</th>
                        <th>管理员姓名</th>
                        <th>管理员所属门店</th>
                        <th>备注</th>
                        <th>时间</th>
                    </tr>
                    </thead>
                    {% set i=1 %}
                    {% for item in points %}
                        <tr class="gradeA">
                            <td>{{ i }}</td>
                            <td>{{ item.point_limit }}</td>
                            <td>
								{% if item.point_type == 1 %}
									增加积分
								{% elseif item.point_type == 2 %}
									减少积分
								{% endif %}
                            </td>
                            <td>{{ item.account }}</td>
                            <td>
								{% if item.storesOwned == 0 %}
									超级管理员
								{% else %}
									{{ item.store_name }}
								{% endif %}
                            </td>
                            <td>{{ item.mark }}</td>
                            <td>{{ item.add_date | date('Y-m-d H:i:s') }}</td>
                        </tr>
                    {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

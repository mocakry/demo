{% extends 'AdminBundle::layout.html.twig' %}
{% block title %}
    文章管理
{% endblock %}

{% block css %}
    <style>
        .console-index {
            padding: 0;
            border: 0;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="ibox float-e-margins">
        <div class="ibox-content" >
            <div class="table-responsive">
                <div class="current-location">
                    当前位置：<a href="javascript:;">文章管理</a>
                </div>

                <form action="" class="user-search">
                    <input type="text" placeholder="文章名称" name="name" value="{{ filter.name }}" class="user-name">
                    <input type="submit" value="查询" class="form-search-btu">
                </form>
                <a href="{{ path('admin_article_edit', {id:0}) }}" class="add-btn">添加</a>

                <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                    <tr>
                        <th>序号</th>
                        <th>文章名称</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for item in article %}
                        <tr class="gradeA">
                            <td>{{ i }}</td>
                            <td>{{ item.name }}</td>
                            <td><a href="{{ path('admin_article_edit', {id:item.id}) }}" class="skill-edit">编辑</a>{% if item.id > 2 %} | <a href="{{ path('admin_article_del', {id:item.id}) }}" class="skill-delete">删除</a>{% endif %}</td>
                        </tr>
                        {% set i = i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script>
        $(document).ready(function() {
            // 删除
            $('.skill-delete').click(function(){
                if (confirm('是否删除该文章？')) {
                    return true;
                } return false;
            })
        })
    </script>
{% endblock %}

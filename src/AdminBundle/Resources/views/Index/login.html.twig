    <link href="{{ asset('bundles/admin/css/style.css') }}?v=20170629" rel="stylesheet">
    <style>
        .password-box span.tip-error-login {
            width:28%;
        }
        .forget-password {
            text-decoration: none;
            font-size: 14px;
        }
    </style>
</head>
<body class="height-index">
<div class="password-box login-index">
    <img src="{{ asset('bundles/admin/img/logo-login.png') }}?v=20170526" class="logo" alt="">
    <form action="" method="post" id="password-form" autocomplete="off">
        <p>
            <span>账户：</span><input name="account" autocomplete="off" value="{{ error.account }}">
            <span class="tip-error-login">{{ error.content }}</span>
            {#<a href="{{ path('admin_forget_password') }}" class="forget-password">忘记密码</a>#}
        </p>
        <p>
            <span>密码：</span><input type="password" name="password" value="">
        </p>
        <input type="submit" class="password-submit" value="提交">
    </form>
</div>
<script src="{{ asset('bundles/admin/js/jquery-2.1.1.js') }}?v=20170120"></script>
<script>
    $(function(){
        // 登录验证
        $('.password-submit').click(function(){
            var account = $('.password-box input').eq(0).val();
            var password = $('.password-box input').eq(1).val();
            if (account == '') {
                alert("账户不能为空！");
                return false;
            } else if (password == '') {
                alert("密码不能为空！");
                return false;
            } else {
                $('#password-form').submit();
            }
        })
    })
</script>
</body>

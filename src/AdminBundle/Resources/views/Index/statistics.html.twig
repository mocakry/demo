{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}
    数据与统计
{% endblock %}

{% block css %}
    <style>
        .console-index {
            padding: 0;
            border: 0;
        }
        input.checkbox {
            display: inline-block;
            margin-right: 2px;
        }
        .page form {
            float: left;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="ibox float-e-margins">
        <div class="ibox-content" >
            <div class="table-responsive">
                <div class="current-location">
                    当前位置：<a href="javascript:;">数据与统计</a>
                </div>

                <form action="" class="user-search">
                    <input type="text" placeholder="查询时间段--开始" name="start_date" value="{{ filter.start_date }}" class="user-nickname" onclick="laydate()" >
                    <input type="text" placeholder="查询时间段--结束" name="end_date" value="{{ filter.end_date }}" class="user-phone" onclick="laydate()">
                    <input type="submit" value="查询" class="form-search-btu">
                </form>


                <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                    <tr>
                        <th>门店名称</th>
                        <th>总积分增加</th>
                        <th>总积分减少</th>
                        <th>核销优惠券总数</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in data %}
                        <tr class="gradeA">
                            <td>
                                {% if item.storesOwned == 0 %}
                                    超级管理员
                                {% else %}
                                    {{ item.store_name }}
                                {% endif %}
                            </td>
                            <td>{{ item.add_points }}</td>
                            <td>{{ item.reduce_points }}</td>
                            <td>{{ item.coupon_count }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('bundles/admin/laydate/laydate.js') }}?v=20170228"></script>
    <script>
        $(document).ready(function() {

        })
    </script>
{% endblock %}
